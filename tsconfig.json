{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "strictNullChecks": true,
        "module": "ES6",
        "jsx": "react",
        "target":"ES5",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/components": ["src/components"],

            "@/domains/*": ["src/domains/*"],
            "@/domains": ["src/domains"],

            "@/domain-ui/*": ["src/domain-ui/*"],
            "@/domain-ui": ["src/domain-ui"],

            "@/services/*": ["src/services/*"],
            "@/services": ["src/services"],

            "@/store/*": ["src/store/*"],
            "@/store": ["src/store"],

            "@/utils/*": ["src/utils/*"],
            "@/utils": ["src/utils"],

            "@/shared/*": ["src/shared/*"],
            "@/shared": ["src/shared"],

            "@/entity-schemas/*": ["src/entity-schemas/*"],
            "@/entity-schemas": ["src/entity-schemas"],
        }
    },
    "include": [
        "./src",
        "./index.d.ts"
    ]
}